<?xml version="1.0"?>
<sdf version="1.7">

    <!--include defination-->
    <xmacro_include uri="model://rplidar_a2/model.sdf.xmacro" />
    <xmacro_include uri="model://mid360/model.sdf.xmacro" />
    <xmacro_include uri="model://industrial_camera/model.sdf.xmacro" />
    <xmacro_include uri="model://rm21_armor_module/rm21_armor_module.def.xmacro" />
    <xmacro_include uri="model://rm21_light_indicator_module/rm21_light_indicator_module.def.xmacro" />
    <xmacro_include uri="model://rm21_speed_monitor_module/rm21_speed_monitor_module.def.xmacro" />
    <xmacro_include uri="model://rmua19_standard_robot/chassis_wheel.def.xmacro" />
    <!--property defination-->
    <xmacro_define_value name="global_initial_color" value="none" />
    <xmacro_define_value name="global_armor_sticker_type" value="num3" />
    <!-- 底盘距离水平地面的高度 -->
    <xmacro_define_value name="chassis_height" value="0" />
    <!-- gimbal_yaw 相对于底盘的 z 轴安装偏移 -->
    <xmacro_define_value name="gimbal_main_yaw_height" value="0.146" /> 

    <xmacro_define_value name="gimbal_sub_yaw_height" value="0.105" />
    <xmacro_define_value name="gimbal_sub_yaw_offset_x" value="0.06064" />

    <!-- gimbal_pitch 相对于 gimbal_yaw 的高度差 -->
    <xmacro_define_value name="gimbal_pitch_height" value="0.110" />

    <xmacro_define_block name="26sen_base_robot" params="sticker_type chassis_height gimbal_pitch_height gimbal_main_yaw_height gimbal_sub_yaw_height gimbal_sub_yaw_offset_x">
        <link name="base_footprint"/>
        <joint name="base_to_chassis" type="fixed">
            <pose>0 0 ${chassis_height} 0 0 0</pose>
            <parent>base_footprint</parent>
            <child>chassis</child>
        </joint>
        <!--chassis-->
        <link name="chassis">
            <inertial>
                <pose>0 0 0.055 0 0 0</pose>
                <xmacro_block name="inertia_box" m="15.0" x="0.36" y="0.24" z="0.13"/>
            </inertial>
            <!-- <visual name="chassis_visual">
                <xmacro_block name="geometry_mesh" uri="model://rmua19_standard_robot/meshes/chassis_base.dae"/>
            </visual> -->
            <collision name="chassis_base_collision">
                <pose>0 0 0.045 0 0 0</pose>
                <xmacro_block name="geometry_box" x="0.36" y="0.24" z="0.13"/>
            </collision>
            <collision name="chassis_projectile_container_collision">
                <pose>-0.122 0 0.177 0 0 0</pose>
                <xmacro_block name="geometry_box" x="0.1" y="0.18" z="0.146"/>
            </collision>
            <collision name="chassis_fornt_wheel_holder_collision">
                <pose>0.208 0 0 0 0 0</pose>
                <xmacro_block name="geometry_box" x="0.055" y="0.367" z="0.055"/>
            </collision>
            <collision name="chassis_rear_wheel_holder_collision">
                <pose>-0.208 0 0 0 0 0</pose>
                <xmacro_block name="geometry_box" x="0.055" y="0.367" z="0.055"/>
            </collision>
            <sensor name="chassis_imu" type="imu">
                <always_on>1</always_on>
                <update_rate>200</update_rate>
            </sensor>
        </link>
        <!--front_left wheel link and joint-->
        <xmacro_block name="chassis_wheel_l" prefix="front_left" parent="chassis" pose="0.1414 0.1414 0 0 0 -0.7864815"/>
        <!--front_right wheel link and joint-->
        <xmacro_block name="chassis_wheel_r" prefix="front_right" parent="chassis" pose="0.1414 -0.1414 0 0 0 0.7864815"/>
        <!--rear_left wheel link and joint-->
        <xmacro_block name="chassis_wheel_r" prefix="rear_left" parent="chassis" pose="-0.1414 0.1414 0 0 0 0.7864815"/>
        <!--rear_right wheel link and joint-->
        <xmacro_block name="chassis_wheel_l" prefix="rear_right" parent="chassis" pose="-0.1414 -0.1414 0 0 0 -0.7864815"/>

        <joint name="gimbal_main_yaw_odom_joint" type="revolute">
            <pose relative_to='chassis'>0 0 ${gimbal_main_yaw_height} 0 0 0</pose>
            <parent>chassis</parent>
            <child>gimbal_main_yaw_odom</child>
            <axis>
                <xyz>0 0 1</xyz>
                <limit>
                    <effort>100</effort>
                    <velocity>50</velocity>
                    <lower>-1.79769</lower>
                    <upper>1.79769</upper>
                </limit>
            </axis>
        </joint>
        <link name="gimbal_main_yaw_odom">
            <pose relative_to="gimbal_main_yaw_odom_joint">0 0 0 0 0 0</pose>
        </link>

        <joint name="gimbal_sub_yaw_base_joint" type="revolute">
            <pose relative_to='gimbal_main_yaw_odom'>${gimbal_sub_yaw_offset_x} 0 ${gimbal_sub_yaw_height} 0 0 0</pose>
            <parent>gimbal_main_yaw_odom</parent>
            <child>gimbal_sub_yaw_base</child>
            <axis>
                <xyz>0 0 1</xyz>
                <limit>
                    <effort>100</effort>
                    <velocity>50</velocity>
                    <lower>-1.79769</lower>
                    <upper>1.79769</upper>
                </limit>
            </axis>
        </joint>
        <link name="gimbal_sub_yaw_base">
            <pose relative_to="gimbal_sub_yaw_base_joint">0 0 0 0 0 0</pose>
        </link>

        <joint name="gimbal_sub_yaw_odom_joint" type="revolute">
            <pose relative_to='gimbal_sub_yaw_base'>0 0 0 0 0 0</pose>
            <parent>gimbal_sub_yaw_base</parent>
            <child>gimbal_sub_yaw_odom</child>
            <axis>
                <xyz>0 0 1</xyz>
                <limit>
                    <effort>100</effort>
                    <velocity>50</velocity>
                    <lower>-1.79769</lower>
                    <upper>1.79769</upper>
                </limit>
            </axis>
        </joint>
        <link name="gimbal_sub_yaw_odom">
            <pose relative_to="gimbal_sub_yaw_odom_joint">0 0 0 0 0 0</pose>
        </link>

        <joint name="gimbal_pitch_odom_joint" type="fixed">
            <pose relative_to='gimbal_sub_yaw_odom'>0 0 ${gimbal_pitch_height} 0 0 0</pose>
            <parent>gimbal_sub_yaw_odom</parent>
            <child>gimbal_pitch_odom</child>
            <axis>
                <xyz>0 1 0</xyz>
                <limit>
                    <effort>100</effort>
                    <velocity>50</velocity>
                    <lower>${-3.14*0.25}</lower>
                    <upper>${3.14*0.18}</upper>
                </limit>
            </axis>
        </joint>
        <link name="gimbal_pitch_odom">
            <pose relative_to="gimbal_pitch_odom_joint">0 0 0 0 0 0</pose>
        </link>

        <!--gimbal yaw module-->
        <joint name="gimbal_yaw_joint" type="revolute">
            <pose relative_to='gimbal_pitch_odom'>0 0 -${gimbal_pitch_height} 0 0 0</pose>
            <parent>gimbal_pitch_odom</parent>
            <child>gimbal_yaw</child>
            <axis>
                <xyz>0 0 1</xyz>
                <limit>
                    <effort>100</effort>
                    <velocity>50</velocity>
                    <lower>-1.79769e+308</lower>
                    <upper>1.79769e+308</upper>
                </limit>
            </axis>
        </joint>
        <link name="gimbal_yaw">
            <pose relative_to="gimbal_yaw_joint">0 0 0 0 0 0</pose>
            <inertial>
                <pose>0 0 0.06 0 0 0</pose>
                <xmacro_block name="inertia_cylinder" m="1.0" r="0.05" l="0.17"/>
            </inertial>
            <visual name="visual">
                <xmacro_block name="geometry_mesh" uri="model://rmua19_standard_robot/meshes/gimbal_yaw.dae"/>
            </visual>
            <collision name="collision">
                <pose>0 0 0.0885 0 0 0</pose>
                <xmacro_block name="geometry_box" x="0.065" y="0.117" z="0.177"/>
            </collision>
        </link>
        <!--gimbal pitch module-->
        <joint name="gimbal_pitch_joint" type="revolute">
            <pose relative_to='gimbal_yaw'>0 0 ${gimbal_pitch_height} 0 0 0</pose>
            <parent>gimbal_yaw</parent>
            <child>gimbal_pitch</child>
            <axis>
                <xyz>0 1 0</xyz>
                <limit>
                    <effort>100</effort>
                    <lower>${-3.14*0.25}</lower>
                    <upper>${3.14*0.18}</upper>
                    <velocity>50</velocity>
                </limit>
            </axis>
        </joint>
        <link name="gimbal_pitch">
            <pose relative_to="gimbal_pitch_joint">0 0 0 0 0 0</pose>
            <inertial>
                <pose>0.02 0 0 0 0 0</pose>
                <xmacro_block name="inertia_box" m="0.5" x="0.25" y="0.09" z="0.10" />
            </inertial>
            <!-- <visual name="visual">src/core/description/resource/xmacro/iron2025_sen_ul.sdf.xmacro
                <xmacro_block name="geometry_mesh" uri="model://rmua19_standard_robot/meshes/gimbal_pitch.dae"/>
            </visual> -->
            <collision name="collision_main">
                <pose>0.015 0 0 0 0 0</pose>
                <xmacro_block name="geometry_box" x="0.1" y="0.0915" z="0.08"/>
            </collision>
            <collision name="collision_box">
                <pose>-0.011 0 0.043 0 0 0</pose>
                <xmacro_block name="geometry_box" x="0.14801" y="0.07" z="0.065"/>
            </collision>
            <sensor name="gimbal_imu" type="imu">
                <always_on>1</always_on>
                <update_rate>200</update_rate>
            </sensor>
        </link>
        <!--for referee system -->
        <!--front armors -->
        <!-- <xmacro_block name="small_armor_with_ssrc/core/description/resource/xmacro/iron2025_sen_ul.sdf.xmacroupport" suffix="_0" parent="chassis" sticker_type="${sticker_type}" pose="0.197 0 0.061 0 0 0"/> -->
        <!--left armors -->
        <!-- <xmacro_block name="small_armor_with_support" suffix="_1" parent="chassis" sticker_type="${sticker_type}" pose="0 0.116 0.061 0 0 1.5708"/> -->
        <!--rear armors -->
        <!-- <xmacro_block name="small_armor_with_support" suffix="_2" parent="chassis" sticker_type="${sticker_type}" pose="-0.197 0 0.061 0 0 3.14"/> -->
        <!--right armors -->
        <!-- <xmacro_block name="small_armor_with_support" suffix="_3" parent="chassis" sticker_type="${sticker_type}" pose="0 -0.116 0.061 0 0 -1.5708"/> -->
        <!--light_indicator-->
        <!-- <xmacro_block name="light_indicator" suffix="" parent="chassis" pose="-0.207 0 0.1 0 0 0"/> -->
        <!--speed_monitor_17mm-->
        <xmacro_block name="speed_monitor_17mm" suffix="" parent="gimbal_pitch" pose="0.0878 0 0 ${pi} 0 0"/>
    </xmacro_define_block>

    <!--simulation_robot model-->
    <model name="test">

        <pose>0 0 0.15 0 0 0</pose>
        <xmacro_block name="26sen_base_robot" sticker_type="${global_armor_sticker_type}" chassis_height="${chassis_height}" gimbal_main_yaw_height="${gimbal_main_yaw_height}" gimbal_sub_yaw_height="${gimbal_sub_yaw_height}" gimbal_sub_yaw_offset_x="${gimbal_sub_yaw_offset_x}" gimbal_pitch_height="${gimbal_pitch_height}"/>
        <!--rplidar a2-->
        <!-- <xmacro_block name="rplidar_a2" prefix="front_" parent="chassis" pose="0.155 0 0.1 0 0 0" update_rate="10" samples="400" visualize="true"/> -->
        <!--livox-->
        <xmacro_block name="livox" prefix="front_" parent="gimbal_yaw" pose="-0.04 0.0 0.52 ${pi} 0.0 -${pi/2}" update_rate="20" samples="1875"/>
        <!--industrial camera-->
        <xmacro_block name="industrial_camera" prefix="" parent="gimbal_pitch" pose="0.09 0 0.04 0 0 0" update_rate="30" horizontal_fov="1" width="1920" height="1080"/>

        <!--plugins-->
        <!-- https://github.com/gazebosim/gz-sim/blob/ign-gazebo6/src/systems -->

        <!--plugin for joint state sensor-->
        <plugin filename="ignition-gazebo-joint-state-publisher-system" name="ignition::gazebo::systems::JointStatePublisher">
        </plugin>

        <!--plugin for light bar-->
        <plugin filename="LightBarController" name="ignition::gazebo::systems::LightBarController">
            <controller_name>color</controller_name>
            <link_visual>armor_0/light_bar_visual</link_visual>
            <link_visual>armor_1/light_bar_visual</link_visual>
            <link_visual>armor_2/light_bar_visual</link_visual>
            <link_visual>armor_3/light_bar_visual</link_visual>
            <link_visual>light_indicator/light_bar_visual</link_visual>
            <link_visual>speed_monitor/light_bar_visual</link_visual>
            <initial_color>${global_initial_color}</initial_color>
        </plugin>

        <!--plugin for chassis control-->
        <plugin filename="MecanumDrive2" name="ignition::gazebo::systems::MecanumDrive2">
            <chassis_link>chassis</chassis_link>
            <front_left_joint>front_left_wheel_joint</front_left_joint>
            <front_right_joint>front_right_wheel_joint</front_right_joint>
            <rear_left_joint>rear_left_wheel_joint</rear_left_joint>
            <rear_right_joint>rear_right_wheel_joint</rear_right_joint>
        </plugin>

        <!--plugin for gimbal control-->
        <plugin filename="ignition-gazebo-joint-controller-system" name="ignition::gazebo::systems::JointController">
            <joint_name>gimbal_yaw_joint</joint_name>
            <use_force_commands>false</use_force_commands>
            <p_gain>0.2</p_gain>
            <i_gain>0.01</i_gain>
        </plugin>

        <plugin filename="ignition-gazebo-joint-controller-system" name="ignition::gazebo::systems::JointController">
            <joint_name>gimbal_pitch_joint</joint_name>
            <use_force_commands>false</use_force_commands>
            <p_gain>1</p_gain>
            <i_gain>0.01</i_gain>
        </plugin>

        <!--plugin for shooter-->
        <plugin filename="ProjectileShooter" name="ignition::gazebo::systems::ProjectileShooter">
            <shooter_link>speed_monitor</shooter_link>
            <shooter_offset>0.15 0 0 0 0 0</shooter_offset>
            <shooter_name>small_shooter</shooter_name>
            <projectile_velocity>20</projectile_velocity>
            <projectile_uri>model://rm_projectile_17mm</projectile_uri>
        </plugin>
    </model>
</sdf>